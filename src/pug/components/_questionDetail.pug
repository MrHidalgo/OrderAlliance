.question
  .container

    h3.main__title.wow.wowFadeUp(data-animation-delay="0.3s")!= "Остались вопросы?"

    form.wow.wowFadeUp(class="question__form" question-form-js data-animation-delay="0.4s")
      
      .form__field.question-detail__first-row
        span Кому
        +select(['Руководство'])
      
      .form__field
        input(type="name" name="name" class="form__input question__form-input" placeholder="Ваше имя")

      .form__field
        input(type="tel" name="phone" class="form__input question__form-input")

      .form__field
        textarea(class="form__message question__form-message" name="message" placeholder="Сообщение")
          
      .question-detail__last-row
        button(type="submit" class="form__button question__form-btn")!= "Отправить"
        
        label(for="question-file-upload")
          div( class="form__button form__upload question__form-btn ")!= "Прикрепить файл"
        input(id="question-file-upload" type="file" style="display: none")


